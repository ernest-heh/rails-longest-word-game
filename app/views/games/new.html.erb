<%# <h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p> %>
<div class="container w-50 mt-4">
  <div class="mb-4">
    <h1>New Game</h1>
    <ul class="list-group list-group-horizontal">
      <% @letters.each do |letter| %>
        <li class="list-group-item"><%= letter %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <label class="mb-2" for="">What is the longest word you can find?</label>
    <form class="input-group" action="/score" method="post" data-turbo="false">
      <input class="form-control" type="text" name="word">
      <button class="btn btn-outline-secondary" type="submit" id="button-addon">Play</button>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>

</div>
